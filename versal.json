{
    "version": 2,
    "builds": [
        {
            "src": "event_manager/wsgi.py",
            "use": "@versal/python",
            "config": {"maxLambdaSize": "15mb", "runtime": "python3.9"}
        },
        {
            "src": "build_file.sh",
            "use": "@versal/static-build",
            "config": {"distDir": "staticfiles_build"}
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "event_manager/wsgi.py"
        }
    ]
}
